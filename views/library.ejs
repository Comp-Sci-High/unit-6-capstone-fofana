<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CSTA - CS Teaching Tools Library</title>
  <link rel="stylesheet" href="library.css" />
    <script src="script.js" defer></script>
</head>
<body>
 
   <header>
        <div class="container header-container">
            <a href="/" class="logo">
                <svg viewBox="0 0 100 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 5H5V20H20V5Z" fill="#1A1A1A"/>
                    <path d="M40 5H25V20H40V5Z" fill="#1A1A1A"/>
                    <path d="M60 5H45V20H60V5Z" fill="#1A1A1A"/>
                    <path d="M80 5H65V20H80V5Z" fill="#1A1A1A"/>
                    <path d="M95 20H80V35H95V20Z" fill="#1A1A1A"/>
                    <path d="M60 20H45V35H60V20Z" fill="#1A1A1A"/>
                    <path d="M40 20H25V35H40V20Z" fill="#1A1A1A"/>
                    <path d="M20 20H5V35H20V20Z" fill="#1A1A1A"/>
                </svg>
                CSTA
            </a>
            <nav class="main-nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/library">Requests</a></li>
                    <li><a href="/Request">Submit</a></li>
                                        <li><a href="/indy">Submit</a></li>

                </ul>
            </nav>
            <div class="header-actions">
                <button class="btn btn-outline login-btn">Log In</button>
                <button class="btn">Join CSTA</button>
                <button class="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <button class="close-btn">
            <i class="fas fa-times"></i>
        </button>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="/views/library.ejs">Requests</a></li>
            <li><a href="#">Submit</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </div>


    <h1 style="color: transparent;">.</h1>
  <!-- Hero Section -->
  <section class="hero container">
    <div class="hero-content">
      <h1>Library of CS Teaching Tools</h1>
      <p>Explore our curated collection of top-rated Requests for computer science education, reviewed by teachers like you.</p>
    </div>
    <div class="circles">
      <div class="circle circle-1"></div>
      <div class="circle circle-2"></div>
      <div class="circle circle-3"></div>
    </div>
  </section>

<!-- Library Section -->
<section class="library-section container">
    <div class="library-header">
        <h2 class="library-title">Browse Requests</h2>
    </div>

    <!-- Enhanced Filter Controls -->
    <div class="library-controls">
        <div class="search-group">
            <input type="text" class="search-input" placeholder="Search Requests...">
            <button class="btn btn-primary apply-filters">Search</button>
        </div>
        <div class="filter-group">
            <label for="grade-filter">Grade Level</label>
            <select id="grade-filter" class="filter-select">
                <option value="all">All Grades</option>
                <option value="K-5">K-5</option>
                <option value="6-8">6-8</option>
                <option value="9-12">9-12</option>
                <option value="Higher Ed">Higher Ed</option>
            </select>
        </div>
        <div class="filter-group">
            <label for="topic-filter">Request Type</label>
            <select id="topic-filter" class="filter-select">
                <option value="all">All Types</option>
                <option value="Curriculum">Curriculum</option>
                <option value="Tool">Tool</option>
                <option value="Platform">Platform</option>
                <option value="Book">Book</option>
            </select>
        </div>
    </div>

    <!-- Request Grid -->
    <div class="Request-grid">
        <% if (Requests && Requests.length > 0) { %>
            <% Requests.forEach(function(Request) { %>
                <% if (Requests.isApproved == true) { %>
                    <div class="Request-card" 
                         data-id="<%= Request._id %>"
                         data-name="<%= Request.ProductName.toLowerCase() %>"
                         data-grades="<%= Request.GradeLevel.toLowerCase() %>"
                         data-type="<%= Request.ProductType.toLowerCase() %>">
                        
                        <div class="card-image">
                            <img src="/images/default-Request.jpg" alt="<%= Request.ProductName %>" 
                                 onerror="this.src='data:image/svg+xml;base64,'">
                        </div>
                        
                        <div class="card-content">
                            <h3 class="Request-title"><%= Request.ProductName %></h3>
                            <p class="Request-type"><%= Request.ProductType %></p>
                            
                            <% if (Request.Description) { %>
                                <p class="card-description"><%= Request.Description %></p>
                            <% } %>
                            
                            <div class="Request-meta">
                                <% if (Request.GradeLevel) { %>
                                    <span class="Request-tag">
                                        ðŸ“š <%= Request.GradeLevel %>
                                    </span>
                                <% } %>
                                <% if (Request.SupportedLanguages) { %>
                                    <span class="Request-tag">
                                        ðŸ’» <%= Request.SupportedLanguages %>
                                    </span>
                                <% } %>
                            </div>
                            
                            <div class="Request-footer">
                                <span class="Request-price <%= Request.Price === 'Free' ? 'price-free' : 'price-paid' %>">
                                    <%= Request.Price || 'Not specified' %>
                                </span>
                                <a href="/Request/<%= Request._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        <% } else { %>
            <div class="no-results">
                <h3>No Requests found</h3>
                <p>Be the first to submit a Request!</p>
            </div>
        <% } %>
    </div>

</section>
</body>
</html>
