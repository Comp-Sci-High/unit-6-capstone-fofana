<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CSTA Resource Library</title>
   <link rel="stylesheet" href="library.css" />
  <script src="library.js" defer></script>
</head>
<body>
    <header>
          <div class="container header-container">
            <a href="/" class="logo">
                <svg viewBox="0 0 100 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 5H5V20H20V5Z" fill="#1A1A1A"/>
                    <path d="M40 5H25V20H40V5Z" fill="#1A1A1A"/>
                    <path d="M60 5H45V20H60V5Z" fill="#1A1A1A"/>
                    <path d="M80 5H65V20H80V5Z" fill="#1A1A1A"/>
                    <path d="M95 20H80V35H95V20Z" fill="#1A1A1A"/>
                    <path d="M60 20H45V35H60V20Z" fill="#1A1A1A"/>
                    <path d="M40 20H25V35H40V20Z" fill="#1A1A1A"/>
                    <path d="M20 20H5V35H20V20Z" fill="#1A1A1A"/>
                </svg>
                CSTA
            </a>
            <nav class="main-nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/library">Resources</a></li>
                    <li><a href="/request">Submit</a></li>
                </ul>
            </nav>
            <div class="header-actions">
                <button class="btn btn-outline login-btn">Log In At The Home Page</button>
                <button class="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
        </header>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <button class="close-btn">
            <i class="fas fa-times"></i>
        </button>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/library">Resources</a></li>
            <li><a href="/request">Submit</a></li>
        </ul>
    </div>

    <div class="container">
        <div class="page-title">
            <h1>CS Teaching Resources Library</h1>
            <p>Discover approved, high-quality resources for computer science education</p>
        </div>

        <div class="filters">
            <h3>Filter Resources</h3>
            <div class="filter-row">
                <div class="filter-group">
                    <label for="searchInput">Search Resources</label>
                    <input type="text" id="searchInput" placeholder="Search by name or description...">
                </div>
                
                <div class="filter-group">
                    <label for="productTypeFilter">Resource Type</label>
                    <select id="productTypeFilter">
                        <option value="">All Types</option>
                        <option value="Software">Software</option>
                        <option value="Platform">Platform</option>
                        <option value="Tool">Tool</option>
                        <option value="Game">Game</option>
                        <option value="Curriculum">Curriculum</option>
                        <option value="Website">Website</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label for="priceFilter">Price Model</label>
                    <select id="priceFilter">
                        <option value="">All Prices</option>
                        <option value="Free">Free</option>
                        <option value="Paid">Paid</option>
                        <option value="Freemium">Freemium</option>
                        <option value="Subscription">Subscription</option>
                    </select>
                </div>
            </div>

            <div class="filter-row">
                <div class="filter-group">
                    <label>Grade Levels</label>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="gradeK5" value="K-5">
                            <label for="gradeK5">K-5</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="grade68" value="6-8">
                            <label for="grade68">6-8</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="grade912" value="9-12">
                            <label for="grade912">9-12</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="gradeHigherEd" value="Higher Ed">
                            <label for="gradeHigherEd">Higher Ed</label>
                        </div>
                    </div>
                </div>

                <div class="filter-group">
                    <label>Supported Languages/Tools</label>
                    <div class="checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="langScratch" value="Scratch">
                            <label for="langScratch">Scratch</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="langPython" value="Python">
                            <label for="langPython">Python</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="langJavaScript" value="JavaScript">
                            <label for="langJavaScript">JavaScript</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="langJava" value="Java">
                            <label for="langJava">Java</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="langBlockBased" value="Block-based">
                            <label for="langBlockBased">Block-based</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="langHTML" value="HTML/CSS">
                            <label for="langHTML">HTML/CSS</label>
                        </div>
                    </div>
                </div>
            </div>

            <button class="clear-filters" onclick="clearAllFilters()">Clear All Filters</button>
        </div>

        <div class="results-count" id="resultsCount">
            <% if (Requests && Requests.length > 0) { %>
                <% const approvedCount = Requests.filter(request => request.isApproved).length; %>
                Showing <%= approvedCount %> approved resource<%= approvedCount !== 1 ? 's' : '' %>
            <% } else { %>
                No resources available
            <% } %>
        </div>

        <div class="resources-grid" id="resourcesGrid">
            <% if (Requests && Requests.length > 0) { %>
                <% Requests.filter(request => request.isApproved).forEach(request => { %>
                    <div class="resource-card" data-resource='<%- JSON.stringify(request) %>'>
                        <h3><%= request.ProductName %></h3>
                        <a href="<%= request.Website %>" target="_blank" class="website"><%= request.Website %></a>
                        <p class="description"><%= request.Description %></p>
                        
                        <div class="resource-meta">
                            <span class="meta-tag"><%= request.ProductType %></span>
                            <span class="meta-tag"><%= request.GradeLevel %></span>
                            <span class="price-tag"><%= request.Price %></span>
                        </div>
                        
                        <% if (request.SupportedLanguages) { %>
                            <div class="resource-meta">
                                <% request.SupportedLanguages.split(',').forEach(lang => { %>
                                    <span class="meta-tag"><%= lang.trim() %></span>
                                <% }) %>
                            </div>
                        <% } %>

                        <% if (request.StandardAlignment) { %>
                            <div class="standard-alignment">
                                <strong>Standards:</strong> <%= request.StandardAlignment %>
                            </div>
                        <% } %>

                        <div class="card-actions">
                            <a href="/indy/<%= request._id %>" class="btn btn-primary">Learn More</a>
                            <a href="<%= request.Website %>" target="_blank" class="btn btn-outline">Visit Website</a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <div class="no-results" id="noResults" style="display: none;">
            <h3>No resources found</h3>
            <p>Try adjusting your filters to see more results.</p>
        </div>
    </div>

</body>
</html>