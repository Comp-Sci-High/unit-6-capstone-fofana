<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>CSTA - CS Teaching Tools Library</title>
  <link rel="stylesheet" href="library.css" />
    <script src="library.js" defer></script>
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Icon imports -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
</head>
<body>
 
   
    <!-- Header -->
    <header>
        <div class="container header-container">
            <a href="/" class="logo">
                <svg viewBox="0 0 100 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 5H5V20H20V5Z" fill="#1A1A1A"/>
                    <path d="M40 5H25V20H40V5Z" fill="#1A1A1A"/>
                    <path d="M60 5H45V20H60V5Z" fill="#1A1A1A"/>
                    <path d="M80 5H65V20H80V5Z" fill="#1A1A1A"/>
                    <path d="M95 20H80V35H95V20Z" fill="#1A1A1A"/>
                    <path d="M60 20H45V35H60V20Z" fill="#1A1A1A"/>
                    <path d="M40 20H25V35H40V20Z" fill="#1A1A1A"/>
                    <path d="M20 20H5V35H20V20Z" fill="#1A1A1A"/>
                </svg>
                CSTA
            </a>
            <nav class="main-nav">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/library">Resources</a></li>
                    <li><a href="/request">Submit</a></li>
                                        <li><a href="/indy">Submit</a></li>

                </ul>
            </nav>
            <div class="header-actions">
                <button class="btn btn-outline login-btn">Log In</button>
                <button class="btn">Join CSTA</button>
                <button class="mobile-menu-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
        <button class="close-btn">
            <i class="fas fa-times"></i>
        </button>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/library">Resources</a></li>
            <li><a href="/request">Submit</a></li>
        </ul>
    </div>

    <h1 style="color: transparent;">.</h1>
  <section class="hero container">
    <div class="hero-content">
      <h1>Library of CS Teaching Tools</h1>
      <p>Explore our curated collection of top-rated Requests for computer science education, reviewed by teachers like you.</p>
    </div>
    <div class="circles">
      <div class="circle circle-1"></div>
      <div class="circle circle-2"></div>
      <div class="circle circle-3"></div>
    </div>
  </section>

<section class="library-section container">
    <div class="library-header">
        <h2 class="library-title">Browse Requests</h2>
    </div>

    <!-- Enhanced Filter Controls -->
    <div class="library-controls">
        <div class="search-group">
            <input type="text" class="search-input" placeholder="Search Requests...">
            <button class="btn btn-primary apply-filters">Search</button>
        </div>
        <div class="filter-group">
            <label for="grade-filter">Grade Level</label>
            <select id="grade-filter" class="filter-select">
                <option value="all">All Grades</option>
                <option value="K-5">K-5</option>
                <option value="6-8">6-8</option>
                <option value="9-12">9-12</option>
                <option value="Higher Ed">Higher Ed</option>
            </select>
        </div>
        <div class="filter-group">
            <label for="topic-filter">Request Type</label>
            <select id="topic-filter" class="filter-select">
                <option value="all">All Types</option>
                <option value="Curriculum">Curriculum</option>
                <option value="Tool">Tool</option>
                <option value="Platform">Platform</option>
                <option value="Book">Book</option>
            </select>
        </div>
    </div>

    <div class="Request-grid">
              <% for(let i = 0; i < Requests.length; i++){ %>
   <%    if(Requests[i].isApproved == true){ %>

      <div class="card">
        <img src="<%= Requests[i].image %>" />
        <div class="card-content">
          <h3 id="name"><%= Requests[i].name %> </h3>
          <p><%= Requests[i].Description %></p>
          <p><strong>Level:</strong> </p>
          <p><strong>Grade:</strong></p>
        </div>
      </div>

      

        <div class="resource-card" id="resource-card">
                <div class="resource-header">
                    <h3 class="resource-title"><%= Requests[i].ProductName %></h3>
                    <p class="resource-type"><%= Requests[i].ProductType %></p>
                </div>
                <div class="resource-body">
                    <p class="resource-description"><%= Requests[i].Description %> </p>
                    <div class="resource-meta">
                        <span class="resource-tag"><i class="fas fa-layer-group"></i> <%= Requests[i].GradeLevel %> </span>
                        <span class="resource-tag"><i class="fas fa-code"></i> <%= Requests[i].SupportedLanguages %></span>
                        <span class="resource-tag"><i class="fas fa-check-circle"></i><%= Requests[i].StandardAlignment %></span>
                    </div>
                    <div class="resource-rating">
                        <div class="stars">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <span class="reviews-count">(127 reviews)</span>
                    </div>
                    <div class="resource-footer">
                        <span class="resource-price price-free"><%= Requests[i].Price %></span>
                        <a href="#" class="btn">Try It Out</a>
                    </div>
                </div>
            </div>
<% } %>
<% } %>



</section>
</body>
</html>
