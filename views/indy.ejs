    <script>
        // Tab Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('.tab');
            const tabContents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.dataset.tab;
                    
                    // Remove active class from all tabs and contents
                    tabs.forEach(t => t.classList.remove('active'));
                    tabContents.forEach(content => content.classList.remove('active'));
                    
                    // Add active class to clicked tab and corresponding content
                    tab.classList.add('active');
                    document.getElementById(target).classList.add('active');
                });
            });

            // Rating Selection Functionality
            const ratingOptions = document.querySelectorAll('.rating-option');
            let selectedRating = 0;
            
            ratingOptions.forEach(option => {
                option.addEventListener('click', () => {
                    const rating = parseInt(option.dataset.rating);
                    selectedRating = rating;
                    
                    // Update visual selection
                    ratingOptions.forEach(opt => {
                        if (parseInt(opt.dataset.rating) <= rating) {
                            opt.classList.add('selected');
                        } else {
                            opt.classList.remove('selected');
                        }
                    });
                });
            });

            // Comment Form Submission
            const reviewForm = document.getElementById('review-form');
            const commentsList = document.querySelector('.comments-list');
            
            reviewForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const name = document.getElementById('name').value;
                const comment = document.getElementById('comment').value;
                
                if (name && comment && selectedRating > 0) {
                    // Create new comment
                    const newComment = document.createElement('div');
                    newComment.className = 'comment fade-in';
                    
                    // Get current date
                    const now = new Date();
                    const options = { year: 'numeric', month: 'long', day: 'numeric' };
                    const formattedDate = now.toLocaleDateString('en-US', options);
                    
                    // Create stars based on rating
                    let starsHTML = '';
                    for (let i = 1; i <= 5; i++) {
                        if (i <= selectedRating) {
                            starsHTML += '<span class="star">★</span>';
                        } else {
                            starsHTML += '<span class="star">☆</span>';
                        }
                    }
                    
                    // Build comment HTML
                    newComment.innerHTML = `
                        <div class="comment-header">
                            <span class="comment-author">${name}</span>
                            <span class="comment-date">${formattedDate}</span>
                        </div>
                        <div class="comment-rating">
                            ${starsHTML}
                        </div>
                        <div class="comment-content">
                            <p>${comment}</p>
                        </div>
                    `;
                    
                    // Add to comments list at the top
                    commentsList.insertBefore(newComment, commentsList.firstChild);
                    
                    // Reset form
                    reviewForm.reset();
                    selectedRating = 0;
                    ratingOptions.forEach(opt => opt.classList.remove('selected'));
                    
                    // Show success message
                    alert('Thank you for your review!');
                } else {
                    alert('Please fill out all fields and select a rating.');
                }
            });

            // Resource Card Hover Effects
            const resourceCards = document.querySelectorAll('.resource-card');
            
            resourceCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.querySelector('.btn').classList.remove('btn-outline');
                    card.querySelector('.btn').classList.add('btn-primary');
                });
                
                card.addEventListener('mouseleave', () => {
                    card.querySelector('.btn').classList.remove('btn-primary');
                    card.querySelector('.btn').classList.add('btn-outline');
                });
            });
            
            // Bookmark functionality
            const saveButton = document.querySelector('.action-btn.btn-outline');
            saveButton.addEventListener('click', function(e) {
                e.preventDefault();
                
                if (this.textContent === 'Save for Later') {
                    this.textContent = 'Saved';
                    this.style.backgroundColor = '#e6f7ff';
                    this.style.borderColor = '#0086e6';
                    this.style.color = '#0086e6';
                    
                    // Show confirmation toast
                    showToast('Resource saved to your collection!');
                } else {
                    this.textContent = 'Save for Later';
                    this.style.backgroundColor = '';
                    this.style.borderColor = '';
                    this.style.color = '';
                    
                    showToast('Resource removed from your collection');
                }
            });
            
            // Toast notification function
            function showToast(message) {
                // Create toast element if it doesn't exist
                let toast = document.getElementById('toast-notification');
                if (!toast) {
                    toast = document.createElement('div');
                    toast.id = 'toast-notification';
                    toast.style.position = 'fixed';
                    toast.style.bottom = '20px';
                    toast.style.right = '20px';
                    toast.style.backgroundColor = '#333';
                    toast.style.color = '#fff';
                    toast.style.padding = '12px 20px';
                    toast.style.borderRadius = '4px';
                    toast.style.zIndex = '1000';
                    toast.style.transition = 'opacity 0.3s ease';
                    toast.style.boxShadow = '0 2px 10px rgba(0,0,0,0.2)';
                    document.body.appendChild(toast);
                }
                
                // Set message and show toast
                toast.textContent = message;
                toast.style.opacity = '1';
                
                // Hide toast after 3 seconds
                setTimeout(() => {
                    toast.style.opacity = '0';
                }, 3000);
            }
            
            // Add smooth scroll behavior for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    const targetId = this.getAttribute('href');
                    if (targetId !== '#') {
                        e.preventDefault();
                        const targetElement = document.querySelector(targetId);
                        if (targetElement) {
                            targetElement.scrollIntoView({
                                behavior: 'smooth',
                                block: 'start'
                            });
                        }
                    }
                });
            });
            
            // Initialize page view counter (simulated)
            const viewCount = Math.floor(Math.random() * 500) + 1500;
            const viewCountElement = document.createElement('div');
            viewCountElement.className = 'resource-views';
            viewCountElement.innerHTML = `<i class="fa fa-eye"></i> ${viewCount} teachers have viewed this resource`;
            viewCountElement.style.fontSize = '14px';
            viewCountElement.style.color = '#666';
            viewCountElement.style.marginTop = '15px';
            viewCountElement.style.textAlign = 'center';
            document.querySelector('.resource-preview').after(viewCountElement);
        });
    </script>
