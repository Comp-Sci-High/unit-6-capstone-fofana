<div class="Request-detail">
    <div class="container">
        <div class="Request-header">
            <div class="breadcrumb">
                <a href="/library"><i class="fas fa-arrow-left"></i> Back to Library</a>
            </div>
            
            <div class="Request-title">
                <h1><%= Request.ProductName %></h1>
                <div class="badges">
                    <span class="badge grade"><%= Request.GradeLevel %></span>
                    <span class="badge type"><%= Request.ProductType %></span>
                    <span class="badge price <%= Request.Price === 'Free' ? 'free' : 'paid' %>">
                        <%= Request.Price %>
                    </span>
                </div>
            </div>
            
            <div class="Request-actions">
                <a href="<%= Request.Website %>" target="_blank" class="btn btn-primary">
                    <i class="fas fa-external-link-alt"></i> Visit Request
                </a>
                <button class="btn btn-outline save-Request" data-id="<%= Request._id %>">
                    <i class="far fa-bookmark"></i> Save
                </button>
            </div>
        </div>
        
        <div class="Request-content">
            <div class="main-content">
                <div class="section">
                    <h2>Description</h2>
                    <p><%= Request.Description %></p>
                </div>
                
                <div class="section">
                    <h2>Details</h2>
                    <div class="details-grid">
                        <div class="detail-item">
                            <h3>Grade Levels</h3>
                            <p><%= Request.GradeLevel %></p>
                        </div>
                        <div class="detail-item">
                            <h3>Supported Languages</h3>
                            <p><%= Request.SupportedLanguages %></p>
                        </div>
                        <div class="detail-item">
                            <h3>Standards Alignment</h3>
                            <p><%= Request.StandardAlignment %></p>
                        </div>
                        <div class="detail-item">
                            <h3>Request Type</h3>
                            <p><%= Request.ProductType %></p>
                        </div>
                    </div>
                </div>
                
                <div class="section reviews-section">
                    <h2>Reviews</h2>
                    <div class="review-form">
                        <h3>Add Your Review</h3>
                        <form id="review-form">
                            <div class="form-group">
                                <label>Rating</label>
                                <div class="star-rating">
                                    <% for(let i=1; i<=5; i++) { %>
                                        <i class="far fa-star" data-rating="<%= i %>"></i>
                                    <% } %>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea placeholder="Share your experience..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit Review</button>
                        </form>
                    </div>
                    
                    <div class="reviews-list">
                        <!-- Reviews would be populated here -->
                    </div>
                </div>
            </div>
            
            <div class="sidebar">
                <div class="Request-image">
                    <img src="<%= Request.image || '/images/default-Request.jpg' %>" alt="<%= Request.ProductName %>">
                </div>
                
                <div class="similar-Requests">
                    <h3>Similar Requests</h3>
                    <% Requests.filter(r => r.ProductType === Request.ProductType && r._id !== Request._id).slice(0, 3).forEach(similar => { %>
                        <div class="similar-item">
                            <a href="/Request/<%= similar._id %>">
                                <h4><%= similar.ProductName %></h4>
                                <p><%= similar.GradeLevel %></p>
                            </a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>
        </section>
    </main>

